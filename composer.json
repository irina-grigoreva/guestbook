{
    "autoload": {
        "psr-4": {
            "core\\": "vendor/core",
            "app\\": "src/"
        }
    },
    "require": {
        "gabordemooij/redbean": "^5.7",
        "altorouter/altorouter": "^2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.13",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "cs": "phpcs -p --standard=PSR12 --extensions=php src",
        "cs:fix": "phpcbf -p --standard=PSR12 --extensions=php src",
        "stan": "phpstan analyse -c phpstan.neon --memory-limit=1G",
        "stan:baseline": "phpstan analyse -c phpstan.neon --generate-baseline",
        "stan:clear": "phpstan clear-result-cache",
        "cs:errors-only": "phpcs -p -s --standard=PSR12 --warning-severity=0 src",
        "cs:soft": "phpcs -p -s --standard=PSR12 --runtime-set ignore_warnings_on_exit 1 --runtime-set ignore_errors_on_exit 1 src"
    }
}
